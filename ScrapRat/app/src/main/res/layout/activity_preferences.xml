<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintlayoutPreferences"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_desaturated"
    tools:context=".PreferencesActivity">

    <ImageButton
        android:id="@+id/imageButton_home"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/round_style"
        android:backgroundTint="#673AB7"
        android:contentDescription="Home"
        android:onClick="homeBTNclick"
        android:padding="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_home_24" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="110dp"
        android:layout_height="500dp"
        android:layout_marginStart="16dp"
        android:background="#25000000"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView_buttonColor"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5sp"
            android:text="Button Color"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/buttonColors"
            android:layout_width="match_parent"
            android:layout_height="474dp">

            <RadioButton
                android:id="@+id/radioButtonBCR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"

                android:background="@drawable/round_style"
                android:backgroundTint="@color/red" />

            <RadioButton
                android:id="@+id/radioButtonBCO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="10sp"

                android:background="@drawable/round_style"
                android:backgroundTint="@color/orange" />

            <RadioButton
                android:id="@+id/radioButtonBCY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="10sp"

                android:background="@drawable/round_style"
                android:backgroundTint="@color/yellow" />

            <RadioButton
                android:id="@+id/radioButtonBCG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="10sp"

                android:background="@drawable/round_style"
                android:backgroundTint="@color/green" />

            <RadioButton
                android:id="@+id/radioButtonBCT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="10sp"

                android:background="@drawable/round_style"
                android:backgroundTint="@color/teal" />

            <RadioButton
                android:id="@+id/radioButtonBCB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="10sp"

                android:background="@drawable/round_style"
                android:backgroundTint="@color/blue" />

            <RadioButton
                android:id="@+id/radioButtonBCPr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="10sp"

                android:background="@drawable/round_style"
                android:backgroundTint="@color/purple" />

            <RadioButton
                android:id="@+id/radioButtonBCPi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="10sp"

                android:background="@drawable/round_style"
                android:backgroundTint="@color/pink" />

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="110dp"
        android:layout_height="500dp"
        android:background="#25000000"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout3"
        app:layout_constraintStart_toEndOf="@+id/linearLayout1">

        <TextView
            android:id="@+id/textView_backgroundColor"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5sp"
            android:text="Background Color"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/backgroundColors"
            android:layout_width="match_parent"
            android:layout_height="474dp">

            <RadioButton
                android:id="@+id/radioButton_BGCR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"

                android:background="@drawable/round_style"
                android:backgroundTint="@color/red_desaturated" />

            <RadioButton
                android:id="@+id/radioButton_BGCO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="10sp"

                android:background="@drawable/round_style"
                android:backgroundTint="@color/orange_desaturated" />

            <RadioButton
                android:id="@+id/radioButton_BGCY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="10sp"

                android:background="@drawable/round_style"
                android:backgroundTint="@color/yellow_desaturated" />

            <RadioButton
                android:id="@+id/radioButton_BGCG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="10sp"

                android:background="@drawable/round_style"
                android:backgroundTint="@color/green_desaturated" />

            <RadioButton
                android:id="@+id/radioButton_BGCT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="10sp"

                android:background="@drawable/round_style"
                android:backgroundTint="@color/teal_desaturated" />

            <RadioButton
                android:id="@+id/radioButton_BGCB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="10sp"

                android:background="@drawable/round_style"
                android:backgroundTint="@color/blue_desaturated" />

            <RadioButton
                android:id="@+id/radioButton_BGCPr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="10sp"

                android:background="@drawable/round_style"
                android:backgroundTint="@color/purple_desaturated" />

            <RadioButton
                android:id="@+id/radioButton_BGCPi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="10sp"

                android:background="@drawable/round_style"
                android:backgroundTint="@color/pink_desaturated" />

        </RadioGroup>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="252dp"
        android:layout_height="209dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ratgreen" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="110dp"
        android:layout_height="500dp"
        android:layout_marginEnd="16dp"
        android:background="#25000000"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textView_ratColor"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5sp"
            android:text="Rat Color"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/ratColors"
            android:layout_width="match_parent"
            android:layout_height="474dp">

            <RadioButton
                android:id="@+id/radioButton_RCR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"

                android:background="@drawable/round_style"
                android:backgroundTint="@color/red" />

            <RadioButton
                android:id="@+id/radioButton_RCO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="10sp"

                android:background="@drawable/round_style"
                android:backgroundTint="@color/orange" />

            <RadioButton
                android:id="@+id/radioButton_RCY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="10sp"

                android:background="@drawable/round_style"
                android:backgroundTint="@color/yellow" />

            <RadioButton
                android:id="@+id/radioButton_RCG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="10sp"

                android:background="@drawable/round_style"
                android:backgroundTint="@color/green" />

            <RadioButton
                android:id="@+id/radioButton_RCT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="10sp"

                android:background="@drawable/round_style"
                android:backgroundTint="@color/teal" />

            <RadioButton
                android:id="@+id/radioButton_RCB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="10sp"

                android:background="@drawable/round_style"
                android:backgroundTint="@color/blue" />

            <RadioButton
                android:id="@+id/radioButton_RCPr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="10sp"

                android:background="@drawable/round_style"
                android:backgroundTint="@color/purple" />

            <RadioButton
                android:id="@+id/radioButton_RCPi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="10sp"

                android:background="@drawable/round_style"
                android:backgroundTint="@color/pink" />

        </RadioGroup>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>