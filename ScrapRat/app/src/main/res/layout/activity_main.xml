<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0078B4"
    android:fitsSystemWindows="true"
    android:outlineAmbientShadowColor="#8E1111"
    android:outlineProvider="bounds"
    android:outlineSpotShadowColor="#25C813"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/splash_image"
        android:layout_width="253dp"
        android:layout_height="270dp"
        android:layout_marginTop="68dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ratgreen" />

    <Button
        android:id="@+id/button_play"
        android:layout_width="230dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:onClick="playBTNclick"
        android:text="Play"
        android:textStyle="italic"
        android:textSize="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playerNameInput" />

    <Button
        android:id="@+id/button_settings"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:onClick="settingsBTNclick"
        android:text="Settings"
        app:layout_constraintEnd_toEndOf="@+id/button_play"
        app:layout_constraintStart_toStartOf="@+id/button_play"
        app:layout_constraintTop_toBottomOf="@+id/button_play" />

    <Button
        android:id="@+id/button_about"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:onClick="aboutBTNclick"
        android:text="About"
        app:layout_constraintEnd_toEndOf="@+id/button_settings"
        app:layout_constraintStart_toStartOf="@+id/button_settings"
        app:layout_constraintTop_toBottomOf="@+id/button_settings" />

    <EditText
        android:id="@+id/playerNameInput"
        android:layout_width="215dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="text"
        android:background="@drawable/round_style"
        android:backgroundTint="@color/gray"
        android:text=""
        android:hint="Your Name Here"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splash_image" />

</androidx.constraintlayout.widget.ConstraintLayout>